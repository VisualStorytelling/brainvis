{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "outDir": "./dist/",
    "noImplicitAny": false,
    "sourceMap": true,
    "sourceRoot": "./src",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
